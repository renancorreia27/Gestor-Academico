    <string notr="true">/* =======================================================
   1. O CARTÃO DO DIÁLOGO (BASE)
   ======================================================= */
QFrame#frame_add_nota {
    background-color: #FFFFFF;
    border-radius: 20px;         /* Cantos arredondados modernos */
    border: 1px solid #E2E8F0;   /* Borda externa sutil */
    border:4px solid #E2E8F0; /* Efeito de profundidade/3D */
}

/* =======================================================
   2. TIPOGRAFIA
   ======================================================= */
/* Título Principal */
QLabel#label_card_materia {
    color: #2D3748;       /* Cinza Chumbo */
    font-family: &quot;Segoe UI&quot;, sans-serif;
    font-size: 24px;
    font-weight: 800;     /* Extra Bold */
    background-color: transparent;
    padding-left: 10px;
}

/* Labels (&quot;Nota:&quot; e &quot;Peso da Nota:&quot;) */
QLabel#label_nota, QLabel#label_nota_3 {
    color: #718096;       /* Cinza médio */
    font-size: 16px;
    font-weight: 600;
    background-color: transparent;
}

/* Containers dos inputs (Remove bordas antigas) */
QFrame#frame_nota, QFrame#frame_peso_nota {
    background-color: transparent;
    border: none;
}

/* =======================================================
   3. INPUTS MODERNOS (DOUBLE SPINBOX &quot;FILLED&quot;)
   ======================================================= */
QDoubleSpinBox {
    background-color: #EDF2F7; /* Fundo Cinza Claro */
    color: #2D3748;            /* Texto Escuro */
    font-size: 20px;
    font-weight: bold;
    border-radius: 8px;       /* Formato de pílula/arredondado */
    border: 2px solid transparent;
    padding: 5px 10px;
}

/* Estado de Foco (Ao clicar) */
QDoubleSpinBox:focus {
    background-color: #FFFFFF; /* Fundo vira branco */
    border: 2px solid #667EEA; /* Borda Roxa/Azul Vibrante */
    color: #000000;
}

/* Remove os botões de seta padrão (Up/Down) */
QDoubleSpinBox::up-button, QDoubleSpinBox::down-button {
    width: 0px;
    border: none;
    background: transparent;
}

/* =======================================================
   4. BOTÕES (AÇÃO E CANCELAR)
   ======================================================= */

/* --- BOTÃO SALVAR (Gradiente) --- */
QPushButton#btn_salvar {
    /* Gradiente Roxo -&gt; Azul */
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 #667EEA, stop:1 #764BA2);
    color: #FFFFFF;
    border-radius: 12px;
    font-size: 15px;
    font-weight: bold;
    border: none;
}

QPushButton#btn_salvar:hover {
    /* Inverte levemente o gradiente */
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 #764BA2, stop:1 #667EEA);
    margin-top: 1px;
}

QPushButton#btn_salvar:pressed {
    background-color: #553C9A;
    padding-top: 3px;
}

/* --- BOTÃO CANCELAR (Clean) --- */
QPushButton#btn_cancelar {
    background-color: #FFFFFF;
    color: #A0AEC0;            /* Cinza claro */
    border: 2px solid #EDF2F7;
    border-radius: 12px;
    font-size: 15px;
    font-weight: 600;
}

QPushButton#btn_cancelar:hover {
    background-color: #FFF5F5; /* Fundo avermelhado bem claro */
    color: #E53E3E;            /* Vermelho Alerta */
    border: 2px solid #FEB2B2;
}

QPushButton#btn_cancelar:pressed {
    background-color: #E53E3E;
    color: #FFFFFF;
    border: none;
}</string>
