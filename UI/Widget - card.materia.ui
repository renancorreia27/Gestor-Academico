   <string notr="true">/* O Corpo do Card */
QFrame {
    /* Gradiente Vertical Sutil */
    /* Começa Branco Puro no topo (stop:0) */
    /* Termina num Cinza muito claro embaixo (stop:1) */
    background-color: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #ffffff,
        stop:1 #f8f9fa 
    );
    
    /* Mantemos a borda e o arredondamento do estilo Clean */
    border: 1px solid #e1e1e1;
    border-radius: 15px;
}

/* Efeito extra: Quando passa o mouse, ele fica &quot;mais alto&quot; (mais branco) */
QFrame:hover {
     background-color: #ffffff; /* Fica totalmente branco */
     border-color: #bdc3c7;     /* A borda fica um pouco mais forte */
}

/* A Nota Grande (10.0) */
QLabel#label_media {
    color: #2ecc71;  /* O VERDE da imagem */
    font-size: 36px; /* Bem grande */
    font-weight: bold;
    background-color: transparent;
    border: none;
}

/* O Título da Matéria */
QLabel#label_card_materia {
    color: #000000;
    font-size: 16px;
    font-weight: bold;
    background-color: transparent;
    border: none;
}

/* Texto pequeno (Faltas) */
QLabel#label_faltas {
    color: #7f8c8d; /* Cinza médio */
    font-size: 12px;
    background-color: transparent;
    border: none;
}

QPushButton {
    background-color: #ffffff; /* Fundo branco */
    border: 2px solid rgb(231, 50, 53); /* Borda cinza */
    border-radius: 10px;       /* METADE da altura (se o botão tiver 30px) */
    width: 30px;
    height: 30px;
}

QPushButton:hover {
    border-color: rgb(231, 50, 53);
    background-color: rgb(255, 115, 117);
}

QPushButton:pressed {
    background-color: #2ecc71;
    color: white;
}</string>
