   <property name="styleSheet">
    <string notr="true">/* =======================================================
   1. O CARTÃO (CONTAINER)
   ===============================================*/

QFrame#frame_card_materia {
    background-color: #FFFFFF;
    border-radius: 20px;
    border: 1px solid #F1F5F9; 
    border-bottom: 2px solid #E2E8F0; 
}

/* =======================================================
   2. TIPOGRAFIA
   ======================================================= */

/* Nome da Matéria */
QLabel#label_card_materia {
    color: #2D3748;         /* Cinza Chumbo */
    font-family: &quot;Segoe UI&quot;, sans-serif;
    font-size: 18px;
    font-weight: 800;       /* Extra Bold */
    background: transparent;
}

/* Nota (Média) - DESTAQUE */
QLabel#label_media {
    color: #48BB78;
    font-size: 32px;        /* Bem grande */
    font-weight: bold;
    background: transparent;
}

/* Texto de Faltas */
QLabel#label_faltas {
    color: #A0AEC0;         /* Cinza claro discreto */
    font-size: 13px;
    font-weight: 600;
    background: transparent;
}

/* =======================================================
   3. BARRAS DE PROGRESSO (CAPSULE STYLE)
   ======================================================= */
QProgressBar {
    background-color: #EDF2F7; /* Fundo do trilho cinza claro */
    border: none;
    border-radius: 4px;        /* Pontas arredondadas */
    text-align: center;
}

QProgressBar::chunk {
    border-radius: 4px;        /* O preenchimento também é redondo */
}

/* Barra de Notas (Verde Sucesso) */
QProgressBar#progressBar_media::chunk {
    background-color: #48BB78; 
}

/* Barra de Faltas (Vermelho Alerta) */
QProgressBar#progressBar_falta::chunk {
    background-color: #F56565; 
}

/* =======================================================
   4. BOTÕES DE AÇÃO (SOFT BUTTONS)
   ======================================================= */

/* -- Botão Adicionar Nota (Verde) -- */
QPushButton#btn_add_nota {
    background-color: #F0FFF4; /* Verde muito pálido */
    border: 1px solid #C6F6D5;
    border-radius: 12px;       /* Squircle (Quadrado arredondado) */
}

QPushButton#btn_add_nota:hover {
    background-color: #C6F6D5; /* Verde um pouco mais forte */
    border: 1px solid #48BB78;
}

QPushButton#btn_add_nota:pressed {
    background-color: #48BB78;
    border: none;
}

/* -- Botão Adicionar Falta (Laranja/Vermelho) -- */
QPushButton#btn_add_falta {
    background-color: #FFF5F5; /* Vermelho muito pálido */
    border: 1px solid #FED7D7;
    border-radius: 12px;
}

QPushButton#btn_add_falta:hover {
    background-color: #FED7D7;
    border: 1px solid #F56565;
}

QPushButton#btn_add_falta:pressed {
    background-color: #F56565;
    border: none;
}

/* -- Botão Deletar/Fechar (Canto Superior Direito) -- */
QPushButton#btn_delete_materia {
    background-color: transparent;
    border: none;
    border-radius: 10px;
}

QPushButton#btn_delete_materia:hover {
    background-color: #FED7D7; /* Fundo vermelho suave ao passar o mouse */
    border: 1px solid #F56565;
}

QPushButton#btn_delete_materia:pressed {
    background-color: #F56565;
}

QPushButton#btn_editar {
    background-color: transparent;
    border: none;
    border-radius: 10px;
}

QPushButton#btn_editar:hover {
    background-color: rgb(223, 223, 221); /* Fundo vermelho suave ao passar o mouse */
}

QPushButton#btn_editar:pressed {
    background-color: rgb(212, 212, 212);
}


</string>
